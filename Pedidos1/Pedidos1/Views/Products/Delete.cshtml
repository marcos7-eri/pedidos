@model Pedidos1.Models.Product
@{
    ViewData["Title"] = "Eliminar producto";
}
<div class="d-flex align-items-center mb-3">
    <h2 class="me-auto mb-0 text-danger">Eliminar producto</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
</div>

<div class="card border-danger">
    <div class="card-body">
        <p>¿Seguro que deseas eliminar este producto?</p>
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Model.Category</dd>
            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger"><i class="bi bi-trash me-1"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-light ms-2">Cancelar</a>
        </form>
    </div>
</div>
