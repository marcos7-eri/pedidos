@model Pedidos1.Models.Product
@{
    ViewData["Title"] = "Detalle de producto";
}
<div class="d-flex align-items-center mb-3">
    <h2 class="me-auto mb-0">Detalle de producto</h2>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Categoría</dt>
            <dd class="col-sm-9">@Model.Category</dd>
            <dt class="col-sm-3">Precio</dt>
            <dd class="col-sm-9">@Model.Price.ToString("0.00")</dd>
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
</div>
