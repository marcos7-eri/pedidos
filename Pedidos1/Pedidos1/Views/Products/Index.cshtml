@model IEnumerable<Pedidos1.Models.Product>
@{
    ViewData["Title"] = "Productos";
    var req = ViewContext.HttpContext.Request;
    string qSearch = req.Query["searchString"].ToString();
    string qCategory = req.Query["categoryFilter"].ToString();
    string qMinPrice = req.Query["minPrice"].ToString();
    string qMaxPrice = req.Query["maxPrice"].ToString();
}

<div class="d-flex align-items-center mb-3">
    <h2 class="me-auto mb-0">Productos</h2>
    @if (User.IsInRole("admin") || User.IsInRole("empleado"))
    {
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Nuevo
        </a>
    }
</div>

<div class="card mb-3 shadow-sm">
    <div class="card-header d-flex align-items-center">
        <i class="bi bi-funnel me-2"></i> Filtros
        <button class="btn btn-sm btn-outline-secondary ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#filtersBody">
            Mostrar / Ocultar
        </button>
    </div>
    <div id="filtersBody" class="collapse show">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Buscar</label>
                    <input name="searchString" class="form-control" placeholder="Nombre o descripción" value="@qSearch" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Categoría</label>
                    <input name="categoryFilter" class="form-control" placeholder="Categoría" value="@qCategory" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Precio mín.</label>
                    <input name="minPrice" type="number" step="0.01" class="form-control" value="@qMinPrice" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Precio máx.</label>
                    <input name="maxPrice" type="number" step="0.01" class="form-control" value="@qMaxPrice" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-search me-1"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th class="text-end">Precio</th>
                    <th class="text-end">Stock</th>
                    <th style="width:160px;" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model is null || !Model.Any())
                {
                    <tr><td colspan="5" class="text-center text-muted py-4">Sin resultados</td></tr>
                }
                else
                {
                    foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td><span class="badge bg-secondary">@p.Category</span></td>
                            <td class="text-end">@p.Price.ToString("0.00")</td>
                            <td class="text-end">@p.Stock</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info me-1" title="Ver">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("admin") || User.IsInRole("empleado"))
                                {
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
