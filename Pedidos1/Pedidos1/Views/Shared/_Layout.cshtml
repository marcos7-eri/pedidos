<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Pedidos1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" asp-controller="Home" asp-action="Index">Pedidos1</a>
        <div class="navbar-nav">
            <a class="nav-link" asp-controller="Products" asp-action="Index">Productos</a>
            <a class="nav-link" asp-controller="Orders" asp-action="Index">Pedidos</a>
            @if (User.IsInRole("admin"))
            {
                <a class="nav-link" asp-controller="Users" asp-action="Index">Usuarios</a>
            }
        </div>
        <div class="ms-auto navbar-nav">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <span class="navbar-text text-white me-3">@User.Identity!.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button class="btn btn-sm btn-outline-light">Salir</button>
                </form>
            }
            else
            {
                <a class="nav-link" asp-controller="Account" asp-action="Login">Ingresar</a>
            }
        </div>
    </nav>
    <div class="container mt-3">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">@TempData["msg"]</div>
        }
        @RenderBody()
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
