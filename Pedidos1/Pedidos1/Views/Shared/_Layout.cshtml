<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Pedidos1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-xl">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Pedidos1</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="topNav" class="collapse navbar-collapse">
                <div class="navbar-nav me-auto">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")"
                       asp-controller="Products" asp-action="Index">
                        <i class="bi bi-box-seam me-1"></i> Productos
                    </a>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")"
                       asp-controller="Orders" asp-action="Index">
                        <i class="bi bi-receipt me-1"></i> Pedidos
                    </a>
                    @if (User.IsInRole("admin"))
                    {
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")"
                           asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people me-1"></i> Usuarios
                        </a>
                    }
                </div>
                <div class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <span class="navbar-text text-white me-3">
                            <i class="bi bi-person-circle me-1"></i>@User.Identity!.Name
                        </span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button class="btn btn-sm btn-outline-light">
                                <i class="bi bi-box-arrow-right me-1"></i> Salir
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container-xl my-4">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["msg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="border-top py-3 bg-light">
        <div class="container-xl d-flex justify-content-between align-items-center small text-muted">
            <div>© @DateTime.Now.Year · Pedidos1</div>
            <div>ASP.NET Core MVC + EF Core</div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
