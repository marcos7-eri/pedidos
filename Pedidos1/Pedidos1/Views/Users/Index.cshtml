@model IEnumerable<Pedidos1.Models.User>
@{
    ViewData["Title"] = "Usuarios";
}

<h2 class="mb-3">Usuarios</h2>

<a class="btn btn-primary mb-2" asp-action="Create">Nuevo</a>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @if (Model is null || !Model.Any())
        {
            <tr><td colspan="3" class="text-center text-muted">Sin usuarios</td></tr>
        }
        else
        {
            foreach (var u in Model)
            {
                <tr>
                    <td>@u.Name</td>
                    <td>@u.Email</td>
                    <td>@u.Role</td>
                </tr>
            }
        }
    </tbody>
</table>
