@model IEnumerable<pedidoweb3.Models.Product>
@{
    ViewData["Title"] = "Productos";
    var categorias = (IEnumerable<string>)(ViewBag.Categorias ?? new List<string>());
    bool puedeGestionar = User.IsInRole("admin") || User.IsInRole("empleado");
}

<div class="productos-container">
    <div class="productos-card">
        <div class="productos-header">
            <h3><i class="bi bi-box-seam me-2"></i>Gestión de Productos</h3>
            <p class="mb-0">Explora y administra los productos disponibles</p>
        </div>

        <div class="productos-body">
            <form method="get" class="row g-2 mb-4">
                <div class="col-md-3">
                    <input type="text" name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Buscar por nombre o descripción" />
                </div>
                <div class="col-md-3">
                    <select name="categoria" class="form-select">
                        <option value="">-- Todas las categorías --</option>
                        @foreach (var c in categorias)
                        {
                            <option value="@c" selected="@(Context.Request.Query["categoria"] == c)">@c</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="number" step="0.01" name="min" value='@Context.Request.Query["min"]' class="form-control" placeholder="Precio min" />
                </div>
                <div class="col-md-2">
                    <input type="number" step="0.01" name="max" value='@Context.Request.Query["max"]' class="form-control" placeholder="Precio max" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-funnel-fill me-1"></i> Filtrar
                    </button>
                </div>
            </form>

            @if (puedeGestionar)
            {
                <p>
                    <a class="btn btn-primary mb-3" asp-action="Create">
                        <i class="bi bi-plus-circle me-1"></i> Crear nuevo
                    </a>
                </p>
            }

            <div class="table-responsive">
                <table class="table table-striped align-middle shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th class="text-end">Precio</th>
                            <th class="text-end">Stock</th>
                            <th style="width:220px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Categoria</td>
                                <td class="text-end">@item.Precio.ToString("C")</td>
                                <td class="text-end">
                                    @item.Stock
                                    @if (item.Stock <= 5)
                                    {
                                        <span class="badge bg-warning text-dark ms-2">Bajo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-info me-1" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Detalles
                                    </a>
                                    @if (puedeGestionar)
                                    {
                                        <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary: #4e73df;
            --secondary: #858796;
            --success: #1cc88a;
        }

        .productos-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding: 40px 20px;
        }

        .productos-card {
            width: 100%;
            max-width: 1100px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            background: white;
        }

        .productos-header {
            background: linear-gradient(90deg, var(--primary) 0%, #2a3e9d 100%);
            color: white;
            padding: 25px;
        }

        .productos-body {
            padding: 25px;
        }

        .btn-primary {
            background: linear-gradient(90deg, var(--primary) 0%, #2a3e9d 100%);
            border: none;
            padding: 10px 16px;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #3a5bc7 0%, #1e2c7a 100%);
            }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
